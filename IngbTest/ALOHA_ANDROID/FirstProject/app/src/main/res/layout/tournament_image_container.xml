<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tournament_create_image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tournament_image01"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:padding="40dp"
            android:src="@drawable/img_01" />

        <ImageView
            android:id="@+id/tournament_image02"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:padding="40dp"
            android:src="@drawable/img_02" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tournament_create_image_intro_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/tournament_intro01"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_border_line" />

        <EditText
            android:id="@+id/tournament_intro02"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_border_line" />

    </LinearLayout>

</LinearLayout>